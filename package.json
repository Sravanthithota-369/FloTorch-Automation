{
  "name": "automation",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:login": "playwright test tests/login.spec.js",
    "test:login:headed": "playwright test tests/login.spec.js --headed",
    "cucumber": "cucumber-js",
    "cucumber:smoke": "cucumber-js --profile smoke",
    "cucumber:positive": "cucumber-js --profile positive",
    "cucumber:negative": "cucumber-js --profile negative",
    "cucumber:ui": "cucumber-js --profile ui",
    "cucumber:all": "cucumber-js features/",
    "report": "node utils/generate-report.js",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "test:allure": "npm run cucumber:all && npm run allure:generate && npm run allure:open",
    "clean:allure": "rmdir /s /q allure-results allure-report 2>nul || echo 'Directories cleaned'",
    "playwright:allure": "playwright test && npm run allure:generate && npm run allure:open"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@playwright/test": "^1.54.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@cucumber/html-formatter": "^21.13.0",
    "@cucumber/pretty-formatter": "^2.0.0",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^3.3.2",
    "allure-playwright": "^3.3.2",
    "cucumber-html-reporter": "^7.2.0"
  }
}
